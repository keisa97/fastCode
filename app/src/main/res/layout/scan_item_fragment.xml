<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ScanItemFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Hello" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="371dp"
        android:src="@drawable/ic_baseline_search_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_cloth_pants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="pants"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_cloth_shirt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="shirt"
        app:layout_constraintEnd_toEndOf="@+id/btn_cloth_pants"
        app:layout_constraintStart_toStartOf="@+id/btn_cloth_pants"
        app:layout_constraintTop_toBottomOf="@+id/btn_cloth_pants" />

    <Button
        android:id="@+id/btn_cloth_wrist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="wrist"
        app:layout_constraintEnd_toEndOf="@+id/btn_cloth_shirt"
        app:layout_constraintStart_toStartOf="@+id/btn_cloth_shirt"
        app:layout_constraintTop_toBottomOf="@+id/btn_cloth_shirt" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50121653" />

    <Button
        android:id="@+id/btn_cloth_pants_redSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="pants"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline2"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btn_cloth_shirt_redSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="shirt"
        app:layout_constraintEnd_toEndOf="@+id/btn_cloth_pants_redSet"
        app:layout_constraintStart_toStartOf="@+id/btn_cloth_pants_redSet"
        app:layout_constraintTop_toBottomOf="@+id/btn_cloth_pants_redSet" />

    <Button
        android:id="@+id/btn_cloth_wrist_redSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="wrist"
        app:layout_constraintEnd_toEndOf="@+id/btn_cloth_shirt_redSet"
        app:layout_constraintStart_toStartOf="@+id/btn_cloth_shirt_redSet"
        app:layout_constraintTop_toBottomOf="@+id/btn_cloth_shirt_redSet" />

    <TextView
        android:id="@+id/txtTagContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cloth_wrist" />

    <Switch
        android:id="@+id/tglReadWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Switch"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTagContent" />


</androidx.constraintlayout.widget.ConstraintLayout>