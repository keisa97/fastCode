<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TempAddClothFragment">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/et_cloth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="cloth name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_cloth_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="cloth id"


        app:layout_constraintEnd_toEndOf="@+id/et_cloth_name"
        app:layout_constraintStart_toStartOf="@+id/et_cloth_name"
        app:layout_constraintTop_toBottomOf="@+id/et_cloth_name" />

    <EditText
        android:id="@+id/et_cloth_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number|textPersonName"
        android:text="10"
        app:layout_constraintEnd_toEndOf="@+id/et_cloth_id"
        app:layout_constraintStart_toStartOf="@+id/et_cloth_id"
        app:layout_constraintTop_toBottomOf="@+id/et_cloth_id" />

    <ImageView
        android:id="@+id/btn_upload_image"
        android:layout_width="500px"
        android:layout_height="500px"
        android:layout_marginTop="16dp"
        android:text="choose image"
        android:background="@drawable/main_stick_man"
        app:layout_constraintEnd_toEndOf="@+id/et_cloth_score"
        app:layout_constraintStart_toStartOf="@+id/et_cloth_score"
        app:layout_constraintTop_toBottomOf="@+id/et_cloth_score" />

    <Button
        android:id="@+id/btn_upload_hat_cloth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Upload Hat"
        app:layout_constraintEnd_toEndOf="@+id/btn_upload_image"
        app:layout_constraintStart_toStartOf="@+id/btn_upload_image"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_image" />

    <Button
        android:id="@+id/btn_upload_shirt_cloth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Upload Shirt"
        app:layout_constraintEnd_toEndOf="@+id/btn_upload_image"
        app:layout_constraintStart_toStartOf="@+id/btn_upload_image"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_hat_cloth" />

    <Button
        android:id="@+id/btn_upload_pants_cloth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Upload Pants"
        app:layout_constraintEnd_toEndOf="@+id/btn_upload_image"
        app:layout_constraintStart_toStartOf="@+id/btn_upload_image"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_shirt_cloth" />


</androidx.constraintlayout.widget.ConstraintLayout>